import pandas as pd
import matplotlib.pyplot as plt

file_path = r'C:\Users\sjsur\OneDrive\Desktop\stock.csv'
df = pd.read_csv(file_path)
df['Date'] = pd.to_datetime(df['Date'])
df.sort_values(by='Date', inplace=True)
df['Daily Change'] = df['Close'].pct_change() * 100  # Percentage change
mean_price = df['Close'].mean()
std_dev = df['Close'].std()
print(f"Average Closing Price: {mean_price:.2f}")
print(f"Standard Deviation of Closing Price: {std_dev:.2f}")
print(f"Highest Closing Price: {df['Close'].max():.2f} on {df.loc[df['Close'].idxmax(), 'Date']}")
print(f"Lowest Closing Price: {df['Close'].min():.2f} on {df.loc[df['Close'].idxmin(), 'Date']}")
plt.figure(figsize=(12, 6))
plt.plot(df['Date'], df['Close'], marker='o', linestyle='-', label='Closing Price')
plt.title("Stock Price Movements Over Time")
plt.xlabel("Date")
plt.ylabel("Closing Price")
plt.legend()
plt.grid()
plt.show()
plt.figure(figsize=(12, 6))
plt.plot(df['Date'], df['Daily Change'], marker='o', linestyle='-', color='red', label='Daily % Change')
plt.title("Daily Percentage Change in Stock Price")
plt.xlabel("Date")
plt.ylabel("Percentage Change")
plt.legend()
plt.grid()
plt.show()
